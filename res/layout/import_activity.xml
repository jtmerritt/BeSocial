<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XML Import"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:text="Import any XML call logs generated by CallLogBackupRestore."
        android:id="@+id/xml_instructions"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_weight="0.41">

        <TextView
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="file path"
            android:id="@+id/file_path"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/select_file" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select File"
            android:id="@+id/select_file"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import File"
            android:id="@+id/parse_file"
            android:layout_below="@+id/select_file"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/phone_sms_import"
            android:layout_alignEnd="@+id/phone_sms_import" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/xml_cancel"
            android:layout_alignBottom="@+id/parse_file"
            android:layout_alignLeft="@+id/select_file"
            android:layout_alignStart="@+id/select_file"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/xml_progress"
            android:indeterminate="false"
            android:layout_below="@+id/parse_file"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:secondaryProgressTint="@color/accent_200"
            android:progressTint="@color/primary_400" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/xml_progress"
            android:id="@+id/space"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Phone/SMS Import"
            android:id="@+id/contact_name_image_header"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/space"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Data"
            android:id="@+id/phone_sms_import"
            android:layout_below="@+id/contact_name_image_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/phone_log_cancel"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/phone_sms_import"
            android:layout_alignLeft="@+id/xml_cancel"
            android:layout_alignStart="@+id/xml_cancel" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/phone_db_progressBar"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/phone_sms_import"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:secondaryProgressTint="@color/accent_200"
            android:progressTint="@color/primary_400" />
    </RelativeLayout>

</LinearLayout>